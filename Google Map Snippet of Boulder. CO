<h1> Google Map of Boulder </h1>

<style>
	div #gmap {
		height:441px;
		width:565px;
	}

	div #map {
		overflow:hidden;
	}
</style>


<div id='map'>
	<div id='gmap'></div>
</div> 

<script src='https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyD0FWdUWjeWyX_-61DPs2Y9TkLNTR3qd9A'></script>

<script> 

function init_map(){
	var myOptions = {zoom:12,center:new google.maps.LatLng(40.0192447,-105.27344959999999),mapTypeId: google.maps.MapTypeId.TERRAIN};
		map = new google.maps.Map(document.getElementById('gmap'), myOptions);
		marker = new google.maps.Marker({map: map,position: new google.maps.LatLng(40.0192447,-105.27344959999999)});
		infowindow = new google.maps.InfoWindow({content:'<strong>Boulder</strong><br>Pearl St<br>80302 Boulder<br>'});
		google.maps.event.addListener(marker, 'click', function(){infowindow.open(map,marker);});
		infowindow.open(map,marker);
	}

google.maps.event.addDomListener(window, 'load', init_map);

</script>

</html>
